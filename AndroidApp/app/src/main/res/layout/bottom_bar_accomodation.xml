<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_menu_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_menu_bar_height"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:background="@color/bottom_menu_bar"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/call_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/call_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/call" />

        <com.hikearmenia.ui.widgets.TextView
            android:id="@+id/call_text"
            style="@style/regular_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Call"
            android:textColor="@android:color/white"
            android:textSize="@dimen/bottom_menu_bar_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/email_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/mail" />

        <com.hikearmenia.ui.widgets.TextView
            android:id="@+id/email_text"
            style="@style/regular_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Email"
            android:textColor="@android:color/white"
            android:textSize="@dimen/bottom_menu_bar_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/web_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/web_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/web" />

        <com.hikearmenia.ui.widgets.TextView
            android:id="@+id/web_text"
            style="@style/regular_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Web"
            android:textColor="@android:color/white"
            android:textSize="@dimen/bottom_menu_bar_text" />
    </LinearLayout>
</LinearLayout>

