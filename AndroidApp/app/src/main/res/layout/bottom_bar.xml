<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_menu_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_menu_bar_height"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:background="@color/bottom_menu_bar"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/find_local_guides"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/find_local_guides_icon"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/find_menu" />

        <com.hikearmenia.ui.widgets.TextView
            style="@style/regular_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/find_guides"
            android:textColor="@android:color/white"
            android:textSize="@dimen/bottom_menu_bar_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_bar_saved_trails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom_menu_right_icon"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/saved_trails_menu" />

        <com.hikearmenia.ui.widgets.TextView
            android:id="@+id/bottom_menu_right_text"
            style="@style/regular_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/favorite_trails"
            android:textColor="@android:color/white"
            android:textSize="@dimen/bottom_menu_bar_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_menu_take_photo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/camera_bar" />

        <com.hikearmenia.ui.widgets.TextView
            style="@style/regular_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/take_a_photo"
            android:textColor="@android:color/white"
            android:textSize="@dimen/bottom_menu_bar_text" />
    </LinearLayout>
</LinearLayout>

